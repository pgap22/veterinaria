// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Dueno {
  id        Int    @id @default(autoincrement())
  email     String
  nombre    String
  password  String
  telefono  String
  direccion String
  mascotas Mascota[]
}

model Mascota {
  id      Int     @id @default(autoincrement())
  nombre  String
  especie String
  raza    String
  genero  Boolean
  edad    String
  id_dueno Int
  dueno Dueno @relation(fields: [id_dueno], references: [id])
}
